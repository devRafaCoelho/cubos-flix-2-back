datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int         @id @default(autoincrement())
  name      String
  email     String      @unique
  password  String
  favorites Favorites[]
}

model Favorites {
  id        Int    @id @default(autoincrement())
  movieID   String
  movieName String
  user      User   @relation(fields: [userId], references: [id])
  userId    Int
}
